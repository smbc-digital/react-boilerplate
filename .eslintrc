{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": ["jest"],
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}